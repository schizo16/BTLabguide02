@{
}
@model List<CategoryViewModel>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <h1>Categories</h1>
            <ul>
                @foreach (var categoryViewModel in Model)
                {
                    <button type="button" class="btn btn-primary btn-block">@categoryViewModel.Category.Name</button>
                }
            </ul>
        </div>
        <div class="col-md-9">
            <h1>Products</h1>

            <table class="table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Category</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var categoryViewModel in Model)
                    {
                        foreach (var product in categoryViewModel.Products)
                        {
                            <tr>
                                <td>@product.Name</td>
                                <td>@product.Price</td>
                                <td>@categoryViewModel.Category.Id</td>
                                <td>
                                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@product.Id">Details</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>